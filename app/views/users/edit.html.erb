

<form action="/users/:id/" method="get">
	<div>
		<label for="home">Home Address:</label>
  		<input type="text" name="addr1" placeholder="street">
  		<input type="text" name="addr2" placeholder="unit, apt, #">
  		<input type="text" name="city" placeholder="city">
  		<input type="text" name="state" placeholder="state">
  		<input type="text" name="zip" placeholder="zip">
  		<input type="text" name="country" placeholder="country">
	</div>

	<div>
		<label for="work">Work Address:</label>
  		<input type="text" name="addr1" placeholder="street">
  		<input type="text" name="addr2" placeholder="unit, apt, #">
  		<input type="text" name="city" placeholder="city">
  		<input type="text" name="state" placeholder="state">
  		<input type="text" name="zip" placeholder="zip">
  		<input type="text" name="country" placeholder="country">
	</div>

	<div>
		<label>How do you get around?</label><br>
		<input type="checkbox" name="vehicle" value="bike">Bike
		<input type="checkbox" name="vehicle" value="rail">Rail
		<input type="checkbox" name="vehicle" value="metro">Metro
		<input type="checkbox" name="vehicle" value="carpool">Carpool
		<input type="checkbox" name="vehicle" value="rideshare">Rideshare
	</div>

	<input type="submit" value="Submit">
</form>

